@model List<Blog.Models.Article>

@{
    ViewBag.Title = "List";
}

<div class="container">
    <div class="row">
        @for (int i = 0; i < Model.Count; i++)
        {
            if (i % 2 == 0 && i != 0)
            {
                <div class="row"></div>
            }
            <div class="col-sm-6">
                <article>
                    <header>
                        <h3>
                            @Html.ActionLink(@Model[i].Title, "Details", "Article", new { @id = Model[i].Id }, null)
                        </h3>
                    </header>
                    <p>
                        @Model[i].Summary
                    </p>
                    <footer class="author">
                        <small class="pull-left">
                            @Model[i].DateCreated.ToString("dd.MM.yyyy")
                        </small>
                        <small class="pull-right">
                            --author @Html.ActionLink(Model[i].Author.FullName, "List", "Article", new { @authorId = Model[i].Author.Id }, null)
                        </small>
                    </footer>
                </article>
            </div>
        }
    </div>
</div>
<hr />
